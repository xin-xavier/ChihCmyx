<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topView"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:layout_marginTop="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/guide_p0_top" />

    <View
        android:id="@+id/centerView"
        android:layout_width="180dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topView"
        tools:background="@drawable/guide_p0_center" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="41dp"
        android:layout_height="8dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@drawable/guide_p0_bottom" />

    <Button
        android:id="@+id/experienceNow"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="@string/experience_now"
        android:textColor="@color/orange_200_alpha_100"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerView"
        tools:visibility="visible"
        style="@style/ButtonEliminatePaddingStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>