<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commodityConstraintLayout"
    android:layout_width="169.5dp"
    android:layout_height="wrap_content"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/commodityImage"
        android:layout_width="0dp"
        android:layout_height="161dp"
        android:contentDescription="@string/image_view"
        android:scaleType="centerCrop"
        android:src="@drawable/default_commodity_no_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/commodityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11.5dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/none"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commodityImage"
        tools:text="@string/none" />

    <TextView
        android:id="@+id/commodityPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dp"
        android:layout_marginBottom="12dp"
        android:text="@string/none"
        android:textColor="@color/red_700_alpha_100"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commodityName"
        app:layout_constraintTop_toBottomOf="@+id/commodityName"
        tools:text="@string/none" />

    <TextView
        android:id="@+id/paymentsNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/none"
        android:textColor="@color/grey_500_alpha_100"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/commodityPrice"
        app:layout_constraintEnd_toEndOf="@+id/commodityName"
        app:layout_constraintStart_toEndOf="@+id/commodityPrice"
        tools:ignore="SmallSp"
        tools:text="@string/none" />

</androidx.constraintlayout.widget.ConstraintLayout>